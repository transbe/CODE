//  渲染企业列表
function renderDOM(Arr, domName) {

    if (Arr.length > 0) {
        var lis = "";
        for (var i = 0; i < Arr.length; i++) {
            lis += "<li><input type='radio' value=" + Arr[i].objectId + "><span>" + Arr[i].enterpriseName + "</span></li>"
        }
        $("." +
            domName).css("display", "block");
        $("#" +
            domName).append(lis);
    }
}


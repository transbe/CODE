                    roleNameNum = 1; //其他情况 默认使用阴保工程师
                }
                // console.log(roleNameNum);

                lsObj.setLocalStorage('params', roleNameNum);
                // console.log(lsObj.getLocalStorage('params'));
                location.href = '../../../index.html';

                // 进入页面之前加载一下
                // 获取当前的ip的地址，上传到服务器
                //getNowIP();
            } else {
                console.log(data);
                switch (data.code) {

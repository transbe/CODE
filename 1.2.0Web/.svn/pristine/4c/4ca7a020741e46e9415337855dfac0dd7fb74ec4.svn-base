                            }
                        } catch (error) {

                        }
                        break;
                    case "403":
                        $('.hidkuai2 span').text('参数异常');
                        //诸葛IO
                        try {
                            if (zhugeSwitch == 1) {
                                zhuge.track('登录失败', { '失败原因': '参数异常' });
                            }
                        } catch (error) {}

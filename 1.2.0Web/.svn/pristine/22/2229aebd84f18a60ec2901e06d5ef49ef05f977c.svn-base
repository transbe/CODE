// 创建企业并登陆
function createEnterpris(_data) {
    $.ajax({
        type: "post",
        url: "/cloudlink-core-framework/login/registEnterpriseAndLogin?token=" +
            lsObj.getLocalStorage('token'),
        contentType: "application/json",
        data: JSON.stringify(_data),
        success: function(data) {
            console.log(data);
            if (data.success == 1) {
                $('.bottom3,.Notes').css({
                    display: "none"
                })
                $('.bottom4').css({
                    display: "block"
                });
                jumpto();
            } else {
                switch (data.code) {
                    case "403":
                        layer.msg("注册企业失败！", { skin: "self-success" });
                        break;
                    case "PU01010":
                        layer.msg(data.msg, { skin: "self-success" });
                        break;
                    case "PU00000":
                        layer.msg(data.msg, { skin: "self-success" });
                        break;
                    default:
                        layer.msg("注册企业失败！", { skin: "self-success" });
                        break;
                }
            }
        }
    });
};
// 自动跳转页面
function jumpto() {
    var a = 5;
    var t = setInterval(function() {
        a--;
        if (a < 1) {
            clearInterval(t);
            location.href = '../../../index.html';
        }
        $('.jumpTo').html(a);
    }, 1000)
}
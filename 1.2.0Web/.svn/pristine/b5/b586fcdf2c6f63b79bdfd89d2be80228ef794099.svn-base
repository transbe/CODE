/**
 * @desc 下载报告
 * @method exportReport
 */
function exportReport() {
    uncheck('exportReport');
    var rows = $('#reportTable').bootstrapTable('getSelections');
    var fileId = "";
    if (rows.length < 1) {
        layer.confirm('请至少选择一条审核状态为【验收通过】或【提交报告】的数据！', {
            title: ['提示'],
            btn: ['确定'], //按钮
            skin: 'self'
        });
        return;
    }
    for (var i = 0; i < rows.length; i++) {
        if (rows[i].applyStatus != 3 && rows[i].applyStatus != 5) {
            layer.confirm('请选择审核状态为【验收通过】或【提交报告】的数据！', {
                title: ['提示'],
                btn: ['确定'], //按钮
                skin: 'self'
            });
            return;
        }
        if (i == rows.length - 1) {
            fileId += rows[i].fileId;
        } else {
            fileId += rows[i].fileId + ",";
        }
    }
    // post请求获取文件
    var url = '/cloudlink-core-file-1/attachment/downLoadMultiFile';
    var zipFileName ='阴保报告';  //阴保报告
    var data = {
        'idList': fileId,
        'zipFileName': zipFileName
    };
    $.ajax({
        url: url,
        type: 'post',
        data: data,
        success: function (response, status, request) {
            var disp = request.getResponseHeader('Content-Disposition');
            if (disp && disp.search('attachment') != -1) {
                var form = $('<form method="POST" action="' + url + '">');
                $.each(data, function (k, v) {
                    form.append($('<input type="hidden" name="' + k + '" value="' + v + '">'));
                });
                $('#exportIframe').append(form);
                form.submit(); // 自动提交
            }
        }
    });
}
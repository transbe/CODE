/*第一行tab*/

.item {
    border: 1px solid #e3e3e3;
    cursor: pointer;
    padding: 0;
}

.item:first-child {
    border-right: none;
    border-radius: 16px 0 0 16px;
}

.item.active {
    border-color: #58b7f7;
    background: #edf7ff;
    color: #58b7f7;
}

.btn_wrapper {
    padding: 0;
    text-align: center;
    color: #999;
    margin-right: 15px;
}

.form-horizontal .row.row-content:first-of-type {
    margin-bottom: -5px;
}

@media screen and (max-width:1500px) {
    .form-horizontal .row-content:first-of-type .row-lab {
        flex-basis: 100%;
        /*margin-bottom: 5px;*/
    }
    .form-horizontal .row-content:first-of-type .row-lab:nth-of-type(2) {
        margin-left: 0px;
    }
    .form-horizontal .row-content:last-of-type .row-lab {
        flex-basis: 40%;
        margin-bottom: 5px;
    }
}
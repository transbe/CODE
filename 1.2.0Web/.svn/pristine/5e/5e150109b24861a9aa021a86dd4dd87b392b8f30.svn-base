.forgotPassword .bottom1 {
    width: 760px;
    height: 171px;
    display: none;
    margin-top: 60px
}

.forgotPassword .bottom2 {
    width: 760px;
    height: 228px;
    display: none;
    margin-top: 60px
}

.forgotPassword .bottom3 {
    width: 760px;
    height: 200px;
    display: none;
    margin-top: 60px
}

.forgotPassword .bottom4 {
    width: 100%;
    height: 240px;
    display: none
}

.forgotPassword .bottom4 .finish {
    width: 84px;
    height: 164px;
    margin: 0 auto;
    margin-bottom: 50px;
    background: #fff;
    background: url(../../images/forget_img/Fabulous.png) no-repeat 0 80px
}

.forgotPassword .bottom4 .success {
    width: 300px;
    height: 25px;
    line-height: 25px;
    font-size: 20px;
    text-align: center;
    color: #666;
    margin: 0 auto
}

.forgotPassword .btn1,
.forgotPassword .btn2,
.forgotPassword .btn3,
.forgotPassword .btn4 {
    width: 302px;
    height: 35px;
    margin: 0 auto
}

.forgotPassword .btn1 input,
.forgotPassword .btn2 input,
.forgotPassword .btn3 input,
.forgotPassword .btn4 input {
    width: 100%;
    background: #5EB6F9;
    color: #fff;
    font-size: 20px;
    line-height: 35px;
    outline: none;
    border: none;
    border-radius: 5px;
    cursor: pointer
}

.forgotPassword .Notes {
    width: 300px;
    height: 35px;
    /*text-align: left;*/
    text-align: center;
    display: none;
    font-size: 14px;
    line-height: 35px;
    margin: 0 auto
}

.forgotPassword .Notes a {
    text-decoration: none;
    color: #5EB6F9
}
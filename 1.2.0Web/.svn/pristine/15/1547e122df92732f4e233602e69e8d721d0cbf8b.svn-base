$(function() {
    //根据滚动条判断右下角的图片显示或隐藏
    $(window).scroll(function() {
        var scrollTop = $(window).scrollTop();
        if (scrollTop > 1024) {
            $('.to_top').css({
                display: 'block'
            })
        } else {
            $('.to_top').css({
                display: 'none'
            })
        }
    });
})

function initBindSytleChange() {
    $(".center").click(function() {
        var e = $(this).index();
        $(".center").css({
            borderBottom: "1px solid #ececec",
            color: "#000"
        }), $(".center .i").css({
            display: "none"
        }), $(this).css({
            borderBottom: "1px solid #67BDF6",
            color: "#67BDF6"
        });
        var i = $(this).height();
        $(this).find(".i").css({
            display: "block"
        }), $(this).find(".i:eq(0)").css({
            top: i + "px"
        }), $(this).find(".i:eq(1)").css({
            top: i - 1 + "px"
        }), $(".kuai>div").css({
            display: "none"
        }), $(".kuai>div").eq(e).css({
            display: "block"
        })
    })
}

function lookNum(e) {
    $(e).val().trim().length > 200 ? ($(e).val($(e).val().substring(0, 199)), $(e).next("span").show().text("*最多200字")) : $(e).next("span").hide()
}

function GetQueryString(e) {
    var i = new RegExp("(^|&)" + e + "=([^&]*)(&|$)"),
        n = window.location.search.substr(1).match(i);
    return null != n ? unescape(n[2]) : null
}


function creatuuid() {
    for (var e = [], i = "0123456789abcdef", n = 0; n < 36; n++) e[n] = i.substr(Math.floor(16 * Math.random()), 1);
    return e[14] = "4", e[19] = i.substr(3 & e[19] | 8, 1), e[8] = e[13] = e[18] = e[23] = "-", e.join("")
}

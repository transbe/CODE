/*通用样式*/

ul,
li {
    padding: 0;
    margin: 0;
}


/*首页头部样式*/

.navbar-header {
    width: 46%;
    font-size: 0;
}

.navbar-header .logo-name {
    display: inline-block;
    width: 137px;
    height: 30px;
    margin: 15px;
}

.navbar-header .logo-info {
    display: inline-block;
    width: 185px;
    height: 19px;
    margin-bottom: 19px;
}

.navbar-static-top {
    margin-bottom: 0;
}

.person-operate {
    height: 60px !important;
    margin-right: 10px;
    font-size: 0;
}
.person-operate *{
    font-size: 13px;
}
.person-operate>li {
    /*border:1px solid red;*/
    /*display: table-cell;*/
    vertical-align: middle;
}

.person-operate>li>a {
    line-height: 30px;
    padding: 15px 0px;
    font-weight: normal;
    position: relative;
}
.navbar-top-links li:last-child{
    margin-right:5px !important;
}
.person-operate>li:first-of-type span::after,
.person-operate>li>a::after {
    content: "";
    display: inline-block;
    position: absolute;
    top: 18px;
    width: 1px;
    height: 25px;
    background: url("../../images/main/border.png") no-repeat;
}

.person-operate>li:first-of-type span::after {
    right: 0;
    top:-2px;
}

.person-operate>li:nth-of-type(2)>a::after {
    background: url("") no-repeat;
}

.person-operate>li>a img {
    width: 20px;
    height: 20px;
    margin: 5px 8px;
}

.person-operate>li:first-of-type span {
    padding-right: 15px;
}

.person-operate>li:nth-of-type(2)>a {
    min-width: 110px;
    background: transparent !important;
    padding: 10px;
}

.person-operate>li:nth-of-type(2)>a span {
    vertical-align: middle;
}

.person-operate .user-info img {
    width: 30px;
    height: 30px;
    border-radius: 50%;
    margin-right: 5px;
    vertical-align: middle;
}


/*消息（小铃铛）样式*/

.news-parent {
    position: relative;
}

#nuReadMsg {
    position: absolute;
    top: 8px;
    right: 2px;
    width: 18px;
    height: 18px;
    padding: 0 2px;
    line-height: 18px;
    text-align: center;
    background-color: #f62020;
    border-radius: 50%;
    -moz-font-size: 8px;
    -webkit-font-size: 8px;
    font-size: 8px;
    -webkit-text-size-adjust: none;
    color: #fff;
    font-weight: 400;
    display: none;
}


/*个人设置*/

.hide-person-operate {
    position: absolute;
    left: 0;
    top: 60px;
    width: 100%;
    min-width: 110px;
    text-align: center;
    padding: 10px 0;
    background: #344052;
    border-top: 1px solid #101010;
    display: none
}

.hide-person-operate li {
    width: 100%;
    height: 30px;
    line-height: 30px;
    margin: 0;
    padding: 0;
    min-width: 20px;
    padding: 0px 15px;
}

.hide-person-operate li a {
    width: 100%;
    height: 30px;
    line-height: 30px;
    min-height: 30px !important;
    margin: 0;
    padding: 0;
    color: #eee
}

.hide-person-operate li:hover,
.hide-person-operate li:focus {
    background: #434e62;
}

.hide-person-operate li:hover a {
    padding: 0px;
    margin: 0px;
    color: #fff;
}

.right-caret {
    position: relative
}

.right-caret::after {
    display: inline-block;
    content: "";
    width: 0px;
    height: 0px;
    border: 5px solid transparent;
    border-left-color: #fff;
    position: absolute;
    top: 10px;
    right: -8px;
}
.right-caret2 {
    position: relative
}

.right-caret2::after {
    display: inline-block;
    content: "";
    width: 0px;
    height: 0px;
    border: 5px solid transparent;
    border-left-color:  #fff;
    position: absolute;
    top: 10px;
    right: -8px;
}
.set-theme {
    position: relative;
}

.set-theme .theme {
    display: none;
    position: absolute;
    left: 110px;
    top: 0px;
    width: 110px;
    background: #344052;
    text-align: left !important;
}

.set-theme .theme.active {
    display: block;
}

.set-theme .theme li a span:last-child {
    margin-left: 15px !important;
    display: none;
}
.set-theme .theme li a span:last-child.active {
    display: inline-block;
}


.set-language {
    position: relative;
}

.set-language .language {
    display: none;
    position: absolute;
    left: 110px;
    top: 0px;
    width: 110px;
    background: #344052;
    text-align: left !important;
}

.set-language .language.active {
    display: block;
}

.set-language .language li a span {
    margin-left: 15px !important;
    display: none;
}

.set-language .language li a span.active {
    display: inline-block;
}

/*字体不加粗*/
/*2017年9月22日15:27:50 yangyuanhuz 英文版 左侧菜单栏 超出，做一下处理*/
#side-menu * {
    /* font-family: Microsoft YaHei; */
    font-weight: normal;
    font-size: 14px;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}
#side-menu .arrow *{
    white-space: nowrap;
}
/*针对2级菜单换行问题  当字体数超过8个时，会存在压盖*/
#side-menu a {
    white-space: nowrap;
}

/*调整二级导航栏行间距*/

.nav-second-level li a {
    padding: 10px 15px 10px 10px;
    padding-left: 52px;
}


/*左侧菜单收缩按钮*/

.nav-control {
    position: absolute;
    top: 50%;
    right: -8px;
    height: 50px;
    cursor: pointer;
    text-align: center;
    line-height: 34px;
    color: #fff;
}

.nav-control i {
    margin-left: -8px;
    transform-origin: center;
    transition-delay: 0;
    transition-duration: .1s;
    transition-property: transform;
    transition-timing-function: linear;
}

.mini-navbar .nav-control i {
    transform: rotate(180deg);
}

.fa-home {
    font-size: 15px !important;
}


/*隐藏菜单*/

.menu-bar {
    width: 35px;
    height: 30px;
    margin-top: 12px;
    display: none;
}

.menu-bar span {
    margin-left: -6px;
}

#menuNav.navbar-static-side {
    display: block;
}

.popover .arrow{
    display: none;
}

.index-guide{
    position: absolute;
    left: 180px;
    top: 120px;
}
.menu-guide{
    width: 0 !important;
    height: 0 !important;
}

/*媒体查询，使其尽量可以适应手机*/

@media (max-width: 900px) {
    .current-enterprise-li span {
        display: none
    }
}

@media (max-width: 768px) {
    .navbar-header {
        width: 100% !important;
    }
    .navbar-right {
        clear: both;
        width: 100% !important;
        margin-left: 20px;
    }
    .menu-bar {
        display: block;
    }
    #menuNav.navbar-static-side {
        display: none;
        width: 100%;
        z-index: 2001;
        padding-top: 120px;
        height: auto;
    }
    body.full-height-layout #page-wrapper {
        height: calc(100% - 121px);
        margin: 121px 0 0 0px;
    }
    body.fixed-sidebar.mini-navbar #page-wrapper {
        margin: 61px 0 -60px 0px;
        height: calc(100% - 61px);
    }
    #tabTab {
        display: none;
    }
    #content-main {
        height: 100%;
    }
}

@media (max-width: 500px) {
    .navbar-header {
        white-space: nowrap;
    }
    .person-operate {
        overflow: hidden;
    }
}
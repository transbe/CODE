* {
    padding: 0;
    margin: 0;
}

#play {
    width: 100%;
    height: 300px;
    position: relative;
    /*background-size:100% 300px;*/
    background-color: #1193dd;
    overflow: hidden;
}

#play .IMG {
    padding-top: 6px;
    width: 368px;
    height: 314px;
    /*background:red;*/
    overflow: hidden;
    float: right;
    padding-left: 60px;
    background: url('../../images/portal/cp01.png') no-repeat;
}

.textbox {
    width: 740px;
    /*background:red;*/
    float: left;
    margin-top: 80px;
    /*margin-right: 100px;*/
}

.textbox p {
    /*height: 40px;*/
    width: 100%;
    text-align: left;
    line-height: 40px;
    font-size: 18px;
    color: #fff;
}

.cloudPatrol {
    width: 100%;
    height: 500px;
    background: #fff;
}

.cloudPatrol .cloud_patrol {
    width: 1200px;
    height: 100%;
    margin: 0 auto;
}

.cloudPatrol .cloud_patrol .img {
    width: 50%;
    height: 100%;
    float: left;
    /*background:red;*/
}

.cloudPatrol .cloud_patrol .img img {
    padding-left: 60px;
    padding-top: 154px;
    width: 100%;
}

.cloudPatrol .cloud_patrol .font {
    width: 50%;
    height: 100%;
    float: left;
    /*background:green;*/
}

.cloudPatrol .cloud_patrol .font h1 {
    font-weight: normal;
    padding-top: 183px;
    padding-bottom: 26px;
    letter-spacing: 8px;
    /*font-size: 36px;*/
    font-size:26px; 
    margin-left: 95px;
    color: #59b6fc;
    text-align: left;
}

.cloudPatrol .cloud_patrol .font p {
    margin-left: 95px;
    padding-bottom: 15px;
    letter-spacing: 1px;
    font-size: 18px;
    color: #666;
    text-align: left;
}

.bgcolor {
    background: #f8f8f8;
}


/*小圆点*/

.dot {
    width: 2%;
    margin-right: 6px
}
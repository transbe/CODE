html,
body {
    height: 100%
}

.enterprise {
    height: 100%;
    font-size: 14px;
    color: #666;
    background: #edf1f2;
    /*padding: 15px 15px 10px 15px;*/
    padding: 5px;
}

.enterprise .enterprise_main {
    overflow: hidden;
    height: 100%;
    padding-bottom: 5px
}

.enterprise .enterprise_main .enterprise_tree {
    height: 100%;
    float: left;
    width: 300px;
    border: 1px solid #ededed;
    padding: 5px 0;
    background: #fff;
    border-radius: 6px;
    box-shadow: 0px 1px 8px #d3d3d3
}

.enterprise .enterprise_main .enterprise_tree .enterprise_nav {
    overflow-x: auto;
    padding: 15px
}

.enterprise .enterprise_main .enterprise_tree .enterprise_nav .department_add {
    height: 44px
}

.enterprise .enterprise_main .enterprise_tree .enterprise_nav .department_add span {
    display: block;
    background: #3fb0ff;
    color: #fff;
    font-size: 16px;
    line-height: 44px;
    cursor: pointer;
    text-align: center
}

.enterprise .enterprise_main .enterprise_tree .mCSB_dragger_bar {
    margin-right: 0px;
    background: #7e7d7c
}

.enterprise .enterprise_main .enterprise_tree .mCSB_dragger_bar:hover {
    background: #7e7d7c;
    opacity: 1
}

.enterprise .enterprise_main .enterprise_tree .mCSB_draggerRail {
    margin-right: 0px;
    background: #ccc
}

.enterprise .enterprise_main .enterprise_list {
    width: auto;
    max-height: 100%;
    padding: 20px 10px 15px 10px;
    margin-left: 306px;
    border: 1px solid #ededed;
    overflow-x: auto;
    overflow-y: auto;
    background: #fff;
    border-radius: 6px;
    box-shadow: 0px 1px 8px #d3d3d3
}

.enterprise .enterprise_main .enterprise_list p.list_title {
    min-width: 500px;
    color: #333;
    background: #edf1f2;
    margin: 0;
    height: 36px;
    line-height: 36px;
    font-size: 14px;
    border: 1px solid #ededed;
    border-bottom: none
}

.enterprise .enterprise_main .enterprise_list p.list_title .title-left {
    padding-left: 40px;
    display: inline-block;
    width: 285px;
    vertical-align: middle
}

.enterprise .enterprise_main .enterprise_list p.list_title .title-num {
    display: inline-block;
    width: 70px;
    text-align: center
}

.enterprise .enterprise_main .enterprise_list p.list_title .title-right {
    float: right;
    display: inline-block;
    line-height: 36px;
    padding-right: 42px
}

.enterprise .enterprise_main .enterprise_list .child_list {
    min-width: 500px;
    list-style: none;
    border: 1px solid #ededed;
    border-top: none;
    margin: 0;
    padding: 0
}

.enterprise .enterprise_main .enterprise_list .child_list li {
    height: 50px;
    line-height: 50px;
    border-top: 1px solid #ededed;
    padding-left: 35px;
    font-size: 16px;
    color: #383838
}

.enterprise .enterprise_main .enterprise_list .child_list li:nth-child(even) {
    background: #fbfbfb
}

.enterprise .enterprise_main .enterprise_list .child_list li i {
    display: inline-block;
    width: 22px;
    height: 22px;
    cursor: pointer;
    float: right;
    margin: 14px 5px 0 5px
}

.enterprise .enterprise_main .enterprise_list .child_list li .delete_btn {
    margin-right: 30px;
    background: url(/src/images/task/closed.png) center no-repeat
}

.enterprise .enterprise_main .enterprise_list .child_list li .delete_btn:hover {
    background: url(/src/images/task/closed_h.png) center no-repeat
}

.enterprise .enterprise_main .enterprise_list .child_list li .modify_btn {
    background: url(/src/images/task/modify.png) center no-repeat
}

.enterprise .enterprise_main .enterprise_list .child_list li .modify_btn:hover {
    background: url(/src/images/task/modify_h.png) center no-repeat
}

.enterprise .enterprise_main .enterprise_list .child_list li span.clildren_name {
    display: inline-block;
    width: 240px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    vertical-align: middle
}

.enterprise .enterprise_main .enterprise_list .child_list li span.children_num {
    display: inline-block;
    margin-left: 10px;
    vertical-align: middle;
    width: 70px;
    text-align: center
}

.enterprise .enterprise_main .enterprise_list .child_list li span.children_num b {
    font-weight: normal
}

#departmentAdd,
#departmentModify {
    font-size: 14px
}

#departmentAdd .modal-lg .modal-content,
#departmentModify .modal-lg .modal-content {
    width: 600px;
    /*height: 300px;*/
    height: 600px;
    margin: 0 auto;
    border-radius: 8px;
    overflow: hidden
}

#departmentAdd .modal-lg .modal-content .modal-header,
#departmentModify .modal-lg .modal-content .modal-header {
    height: 40px;
    background: #344052;
    color: #fff;
    padding: 0;
    margin: 0
}

#departmentAdd .modal-lg .modal-content .modal-header h3,
#departmentModify .modal-lg .modal-content .modal-header h3 {
    line-height: 40px;
    font-size: 16px;
    text-align: center;
    margin: 0
}

#departmentAdd .modal-lg .modal-content .modal-header h3 a,
#departmentModify .modal-lg .modal-content .modal-header h3 a {
    color: #fff;
    margin-top: 6px;
    margin-right: 10px;
    font-weight: none;
    opacity: 1
}

#departmentAdd .modal-lg .modal-content .modal-body,
#departmentModify .modal-lg .modal-content .modal-body {
    padding: 20px 15px;
    background: #e7e8ec;
    min-height: 210px
}

#departmentAdd .modal-lg .modal-content .modal-body .department_main,
#departmentModify .modal-lg .modal-content .modal-body .department_main {
    height: 470px;
    /*overflow: hidden;*/
    overflow: auto;
    background: #fff;
    border-radius: 5px;
    padding-top: 40px
}

#departmentAdd .modal-lg .modal-content .modal-body .department_main .department_list,
#departmentModify .modal-lg .modal-content .modal-body .department_main .department_list {
    width: 400px;
    margin: 0 auto;
    padding-bottom: 20px
}

#departmentAdd .modal-lg .modal-content .modal-body .department_main .department_list .list_l,
#departmentModify .modal-lg .modal-content .modal-body .department_main .department_list .list_l {
    float: left;
    width: 100px;
    font-size: 16px;
    line-height: 34px
}

#departmentAdd .modal-lg .modal-content .modal-body .department_main .department_list .list_l i,
#departmentModify .modal-lg .modal-content .modal-body .department_main .department_list .list_l i {
    color: #ff3737;
    padding-right: 10px;
    font-size: 20px;
    vertical-align: middle
}

#departmentAdd .modal-lg .modal-content .modal-body .department_main .department_list .list_r,
#departmentModify .modal-lg .modal-content .modal-body .department_main .department_list .list_r {
    width: auto;
    margin-left: 100px
}

#departmentAdd .modal-lg .modal-content .modal-body .department_main .department_list .list_r .parent_input,
#departmentModify .modal-lg .modal-content .modal-body .department_main .department_list .list_r .parent_input {
    cursor: pointer
}

#departmentAdd .modal-lg .modal-content .modal-footer,
#departmentModify .modal-lg .modal-content .modal-footer {
    text-align: center;
    background: #344052;
    height: 50px;
    padding: 0;
    margin: 0
}

#departmentAdd .modal-lg .modal-content .modal-footer button,
#departmentModify .modal-lg .modal-content .modal-footer button {
    height: 36px;
    border: none;
    width: 120px;
    margin-top: 7px;
    font-size: 16px;
    margin: 7px 20px 0 20px
}

#departmentAdd .modal-lg .modal-content .modal-footer .submit,
#departmentModify .modal-lg .modal-content .modal-footer .submit {
    background: #59b6fc;
    color: #fff
}

#departmentModify .modal-lg .modal-content .modal-body .department_main .department_list input[name='parentDepart'] {
    cursor: pointer
}

.ztreeLeft {
    padding: 0;
    padding-top: 20px
}

.ztreeLeft li {
    line-height: 26px
}

.ztreeLeft li a {
    display: block;
    height: 26px;
    background: #f3f3f3;
    margin-bottom: 6px;
    color: #333;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    padding-left: 10px;
    font-weight: bold
}

.ztreeLeft li a:hover {
    text-decoration: none
}

.ztreeLeft li a.curSelectedNode {
    background: #edf7ff;
    border: 1px solid #5ab7fc;
    height: 26px
}

.ztreeLeft li span.button.switch {
    width: 18px;
    height: 18px;
    float: right;
    margin-top: 3px
}

.ztreeLeft li span.button.noline_open,
.ztreeLeft li span.button.bottom_open,
.ztreeLeft li span.button.root_open,
.ztreeLeft li span.button.center_open {
    background: url(/src/images/enterprise/subtract.png) center no-repeat
}

.ztreeLeft li span.button.noline_close,
.ztreeLeft li span.button.bottom_close,
.ztreeLeft li span.button.root_close,
.ztreeLeft li span.button.center_close {
    background: url(/src/images/enterprise/add.png) center no-repeat
}

.ztreeLeft li ul {
    padding: 0
}

.ztreeLeft li ul li {
    padding-left: 18px;
    overflow: hidden;
    background: url(/src/images/enterprise/center.png) 8px 0px repeat-y
}

.ztreeLeft li ul li:first-child {
    background: url(/src/images/enterprise/start.png) 8px 13px no-repeat
}

.ztreeLeft li ul li:last-child {
    background: url(/src/images/enterprise/end.png) 8px -23px no-repeat
}

.ztreeLeft li ul li a {
    color: #666;
    font-weight: normal
}

.disable-btn {
    color: #eee;
}
/*panel-body 内容隐藏/显示*/

.panel .panel-body.panel-body-close {
    height: 0;
    padding-top: 0;
    padding-bottom: 0;
}

.panel .panel-body {
    overflow: auto;
    transition-delay: 0;
    transition-duration: .2s;
    transition-property: height padding;
    transition-timing-function: linear;
}


/*设置label样式*/

.panel-heading label {
    color: cornflowerblue;
    font-weight: normal;
}

.row label {
    text-align: right;
}


/*设置树div*/

.treeview {
    border: 2px solid #ddd;
    overflow: auto;
    height: 260px;
}
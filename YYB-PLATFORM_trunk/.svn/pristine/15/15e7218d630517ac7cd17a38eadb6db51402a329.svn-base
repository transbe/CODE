* {
    margin: 0;
    padding: 0
}

body,
html {
    background-color: #fff;
    width: 100%;
    min-width: 1080px;
    height: 100%;
    min-height: 700px;
    position: relative;
    overflow-x: hidden;
    overflow-y: hidden
}

.forgetPassword {
    margin-left: 14%;
}

.regist {
    margin-left: 30%;
}

.common {
    height: 30px;
    border-left: 1px solid #BBBBBB;
    margin-left: 30px;
    margin-top: 3px
}

#bgcontent {
    width: 100%;
    height: 100%;
    background: url(../../images/login_img/loginbg.jpg);
    background-size: cover
}

#bgcontent .posImg {
    width: 60%;
    height: 265px;
    margin-top: 14%;
    background: red;
    margin-right: 8%;
    float: left;
    background: url(../../images/logo/logo-bg.png) no-repeat center -12px;
}

#bgcontent .loginContent {
    width: 23%;
    height: 480px;
    background: #fff;
    border-radius: 20px;
    /*margin-top: 110px;*/
    margin-top: 9%;
    display: inline-block;
    margin-left: 38%;
}


/*媒体查询，当屏幕缩小的时候适用*/

@media screen and (max-width: 1366px) {
    #bgcontent .loginContent {
        width: 30%;
        margin-left: 35%;
        margin-top: 4%;
    }
    .words {
        bottom: 11% !important;
    }
}

@media screen and (max-width: 1120px) {
    #bgcontent .loginContent {
        width: 40%;
        margin-top: 15%;
        margin-left: 32%;
        margin-bottom: 300px;
    }
    /*隐藏左边的logo*/
    #bgcontent .posImg {
        display: none;
    }
}

@media screen and (max-width: 768px) {
    #bgcontent .loginContent {
        width: 40%;
        margin-top: 8%;
        margin-left: 20%;
    }
}

#bgcontent .loginContent .logoImg {
    width: 100%;
    height: 150px;
    background: url(../../images/logo/logo-LOGO.png) no-repeat 50% 100%;
}

#bgcontent .loginContent .info {
    width: 70%;
    margin-top: 45px;
    margin-left: 60px
}

#bgcontent .loginContent .info .name {
    width: 100%;
    height: 35px;
    border: 1px solid #BBBBBB;
    border-radius: 5px
}

#bgcontent .loginContent .info .name .nameImg {
    width: 30px;
    height: 35px;
    float: left;
    background: url(../../images/login_img/nameImg1.png) no-repeat 8px 8px
}

#bgcontent .loginContent .info .name input {
    width: 98%;
    height: 20px;
    margin-top: 5px;
    padding-left: 5px;
    border: none;
    outline: none;
    font-size: 14px
}

#bgcontent .loginContent .info .accountMsg {
    width: 70%;
    height: 30px
}

#bgcontent .loginContent .info .accountMsg span {
    width: 100%;
    height: 100%;
    color: red;
    font-size: 14px;
    line-height: 30px
}

#bgcontent .loginContent .info .passwordMsg {
    width: 70%;
    height: 50px
}

#bgcontent .loginContent .info .passwordMsg span {
    width: 100%;
    height: 100%;
    color: red;
    font-size: 14px;
    line-height: 30px
}

#bgcontent .loginContent .info .password {
    width: 100%;
    height: 35px;
    border: 1px solid #BBBBBB;
    border-radius: 5px
}

#bgcontent .loginContent .info .password .passwordImg {
    width: 30px;
    height: 35px;
    float: left;
    background: url(../../images/login_img/password.png) no-repeat 8px 8px
}

#bgcontent .loginContent .info .password input {
    width: 98%;
    height: 20px;
    margin-top: 5px;
    padding-left: 5px;
    border: none;
    outline: none;
    font-size: 14px
}

#bgcontent .loginContent .btn {
    width: 70%;
    margin-left: 60px;
    border-radius: 5px;
    height: 35px;
    border: none;
    background: #5EB6F9;
    color: #fff;
    font-size: 20px;
    font-weight: bold;
    cursor: pointer
}

#bgcontent .loginContent .forget {
    width: 80px;
    margin-top: 20px;
    border: none;
    outline: none;
    background: #fff;
    color: #5EB6F9;
    font-size: 16px;
    cursor: pointer
}

#bgcontent .loginContent .immediately {
    width: 100px;
    margin-top: 20px;
    border: none;
    outline: none;
    background: #fff;
    color: #5EB6F9;
    font-size: 16px;
    cursor: pointer
}

.words {
    text-align: center;
    font-size: 14px;
    color: #666;
    position: absolute;
    left: 50%;
    bottom: 4%;
    transform: translateX(-50%)
}

.words span {
    margin: 0 4px;
}

.loginContent {
    width: 100%;
    height: 100%;
    margin: 0 auto
}

.tag {
    font-size: 20px;
    font-weight: 700;
    color: #333;
    margin-bottom: 21px;
    text-align: center;
    height: 20px;
    line-height: 20px;
}
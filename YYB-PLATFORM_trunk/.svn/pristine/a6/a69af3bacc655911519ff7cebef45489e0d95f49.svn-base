.fl {
    float: left
}

* {
    margin: 0;
    padding: 0
}

body,
html {
    width: 100%;
    min-width: 760px;
    height: 100%;
    min-height: 750px;
    position: relative;
    overflow-x: hidden;
    overflow-y: hidden
}

.forgotPassword {
    width: 100%;
    height: 100%;
    background: url(../../images/forget_img/forgetbg.png) repeat-x;
    background-size: auto 100%
}

.forgotPassword .title {
    width: 760px;
    height: 40px;
    margin: 0 auto
}

.forgotPassword .title .logobg {
    width: 170px;
    height: 110px;
    float: left;
    background: url(../../images/logo/forget-logo.png) no-repeat 0 66px
}

.forgotPassword .title .font {
    width: 100px;
    height: 30px;
    float: left;
    margin-left: 20px;
    padding-left: 20px;
    margin-top: 75px;
    line-height: 30px;
    border-left: 2px solid #fff;
    font-size: 24px;
    color: #fff;
    font-weight: bold
}

.forgotPassword .forgetPswContent {
    width: 760px;
    height: 500px;
    margin: 0 auto;
    margin-top: 90px;
    background: #fff;
    border-radius: 10px;
    -webkit-box-shadow: 0px 20px 70px rgba(0, 0, 0, 0.5);
    -moz-box-shadow: 0px 20px 70px rgba(0, 0, 0, 0.5);
    box-shadow: 0px 20px 70px rgba(0, 0, 0, 0.4)
}

.forgotPassword .forgetPswContent .top {
    width: 720px;
    height: 80px;
    border-bottom: 1px solid #DDD;
    text-align: center
}

.forgotPassword .forgetPswContent .top img {
    margin-top: 20px
}

.forgotPassword .forgetPswContent .Contain span {
    color: #E52027;
    padding-right: 5px
}

.forgotPassword .forgetPswContent .row {
    width: 100%;
    height: 35px;
    margin-bottom: 20px
}

.forgotPassword .forgetPswContent .row .left {
    width: 228px;
    height: 35px;
    line-height: 35px;
    text-align: right
}

.forgotPassword .forgetPswContent .row .center input {
    width: 300px;
    height: 35px;
    border: 1px solid #bbb;
    border-radius: 5px;
    outline: none;
    padding-left: 5px
}

.forgotPassword .forgetPswContent .row .center .styles {
    position: absolute;
    right: 3px;
    top: 3px;
    width: 110px;
    height: 32px;
    border: none;
    border-radius: 5px;
    background: #49CB86;
    color: #fff;
    outline: none;
    cursor: pointer
}

.forgotPassword .forgetPswContent .row .right {
    width: 210px;
    height: 35px;
    display: none;
    line-height: 35px;
    margin-left: 10px;
    font-size: 14px;
    color: #FF3935;
    text-align: left;
    background: url(../../images/forget_img/warning.png) no-repeat 0 center
}

.forgotPassword .forgetPswContent .row .right span {
    display: block;
    margin-left: 20px
}

.row {
    width: 100%;
    height: 35px;
    margin-bottom: 20px
}

.row .left {
    width: 228px;
    height: 35px;
    line-height: 35px;
    text-align: right
}

.row .center input {
    width: 300px;
    height: 35px;
    border: 1px solid #bbb;
    border-radius: 5px;
    outline: none
}

.row .center .styles {
    position: absolute;
    right: 3px;
    top: 3px;
    width: 110px;
    height: 32px;
    border: none;
    border-radius: 5px;
    background: #49CB86;
    color: #fff;
    outline: none;
    cursor: pointer
}

.row .center select {
    width: 302px;
    height: 35px;
    border-radius: 5px;
    outline: none
}

.row .center select option {
    width: 302px;
    height: 50px
}

.row .center2 select {
    width: 147px;
    height: 35px;
    border-radius: 5px;
    outline: none
}

.row .center2 select option {
    width: 302px;
    height: 50px
}

.row .right {
    width: 220px;
    height: 35px;
    display: none;
    line-height: 35px;
    margin-left: 10px;
    font-size: 14px;
    color: #FF3935;
    text-align: left;
    background: url(../../images/forget_img/warning.png) no-repeat 0 center
}

.row .right span {
    display: block;
    margin-left: 20px
}

.words {
    min-width: 760px;
    text-align: center;
    font-size: 14px;
    color: #666;
    position: absolute;
    left: 50%;
    bottom: 20px;
    transform: translateX(-50%)
}

.words span {
    vertical-align: middle;
    font-size: 26px;
    margin-left: 5px;
    margin-right: 5px
}

.code {
    position: absolute;
    right: 3px;
    top: 3px;
    width: 110px;
    height: 32px;
    border: none;
    border-radius: 5px;
    background: url(../../images/forget_img/code.jpg) no-repeat 0 center;
    text-align: center;
    color: cyan;
    line-height: 32px;
    letter-spacing: 8px;
    font-size: 20px;
    cursor: pointer
}